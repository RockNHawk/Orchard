@using Orchard.ContentManagement;
@using Orchard.ContentManagement.Records;
@using System.Linq
@model IEnumerable<ContentItem>
@{
    var list = Model;
    var contentItem = list.First();
    var pageTitle = T("Manage versions of content item #{0}", contentItem.Id);
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ApprovalList</title> 
    <style>
        .table {
            border-collapse: collapse !important;
            width: 100%;
        }

            .table td {
                background-color: #fff !important;
                border-bottom: 1px solid #333;
                line-height: 28px;
            }

            .table th {
                background-color: #fff !important;
                border-bottom: 1px solid #333;
                font-size: 16px;
                font-weight: 600;
            }
    </style>
</head>
<body>
    <div>
        <div>
            <label>状态</label>
            <select>
                <option>待审批</option>
                <option>审批中</option>
                <option>审批完成</option>
                <option>驳回</option>
            </select>
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>编号</th>
                    <th>类型</th>
                    <th>状态</th>
                    <th>版本号</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in list)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ContentType</td>
                        <td></td>
                        <td>@item.Version</td>
                        <td>查看</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</body>
</html>
